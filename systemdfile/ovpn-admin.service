[Unit]
Description=ovpn-admin
Documentation=https://github.com/flant/ovpn-admin/tree/master
Documentation=https://github.com/pashcovich/openvpn-user

[Service]
Type=simple
WorkingDirectory=/etc/openvpn/server
ExecStartPre=/bin/bash -c '/bin/bash ~/Openvpn_ovpn-admin/setup/setup-script-no.sh'
ExecStart=/usr/sbin/ovpn-admin-linux-amd64 --easyrsa.bin-path="./easyrsa" --log.level="debug" --ovpn.server=<Pub-IP>:1194:udp --templates.clientconfig-path="/etc/openvpn/server/client.conf.tpl"
RestartSec=5s
Restart=on-failure
[Install]
WantedBy=multi-user.target